<mvc:View controllerName="Ejercicio19.Ejercicio19.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns="sap.m">
	<Page title="{i18n>title}"> 
        <Panel  width="auto" class="sapUiResponsiveMargin" id="panelTablaId" expandable="true" expanded="true">
            <Table id="tablaProdId" items="{modelDetalles>/value}" >
                <columns >
                    <Column >
                        <Text text="{i18n>orderId}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>productId}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>unitPrice}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>quantity}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>discount}"/>
                    </Column>
                </columns>
                <items> 
                    <ColumnListItem type="Active" press="getSelected">
                        <cells>
                            <Text text="{modelDetalles>OrderID}" />
                        </cells>
                        <cells>
                            <Text text="{modelDetalles>ProductID}"/>
                        </cells>
                        <cells>
                            <Text text="{modelDetalles>UnitPrice}" />
                        </cells>
                        <cells>
                            <Text text="{modelDetalles>Quantity}" />
                        </cells>
                        <cells>
                            <Text text="{modelDetalles>Discount}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>
